<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leonwork.clinica.ClinicDetail">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detailDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detailMoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp" />

        <Button
            android:id="@+id/btnCall"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignLeft="@+id/btnMap"
            android:layout_alignStart="@+id/btnMap"
            android:layout_below="@+id/btnNavigate"
            android:background="@drawable/phone" />

        <Button
            android:id="@+id/btnMap"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/map" />

        <Button
            android:id="@+id/btnNavigate"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignLeft="@+id/btnCall"
            android:layout_alignStart="@+id/btnCall"
            android:layout_below="@+id/btnMap"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_navigate"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>



</RelativeLayout>
